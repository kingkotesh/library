    </div>
</nav>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hamburger Icon Example</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        
        .sidenav {
            height: 100%;
            width: @sidebarWidth;
            position: fixed;
            z-index: 1;
            top: 0;
            left: 0;
            background-color: #f8f9fa!important;
            overflow-x: hidden;
            transition: 0.5s;
            padding-top: 60px;
            box-shadow: 0px 0px 8px #888888;
        }

        .sidenav a {
            padding: 8px 8px 8px 16px;
            text-decoration: none;
            font-size: 25px;
            color: #818181;
            display: block;
            transition: 0.3s;
        }

        .sidenav a:hover {
            color: #f1f1f1;
        }

        .sidenav::-webkit-scrollbar {
            display: none;
        }

        .animated-icon {
            width: 30px;
            height: 20px;
            position: relative;
            margin: 0px;
            cursor: pointer;
        }

        .animated-icon span {
            display: block;
            position: absolute;
            height: 3px;
            width: 100%;
            border-radius: 9px;
            opacity: 1;
            left: 0;
            transition: .25s ease-in-out;
            background: #f3e5f5;
        }

        .animated-icon span:nth-child(1) {
            top: 0px;
        }

        .animated-icon span:nth-child(2) {
            top: 10px;
        }

        .animated-icon span:nth-child(3) {
            top: 20px;
        }

        .navbar-toggler {
            z-index: 2;
        }
    </style>
</head>
<body>

    <div class="row">
        <div class="col-1 d-flex justify-content-center">
            <div id="mySidenav" class="sidenav">
                <a href="~/Default.cshtml">Home</a>

                <a href="@categoriespath">Categories</a>
                <a href="~/mylist.cshtml">Reserved</a>
                <a href="~/logout.cshtml">Log out</a>
            </div>
        </div>
    </div>

    <!-- Navbar -->
    <form method="post" action="">
        <button type="button" name="3line" class="navbar-toggler" style="border: none; background: none;" onclick="toggleSidebar()">
            <div class="animated-icon"><span></span><span></span><span></span></div>
        </button>
    </form>

    <!-- Script for hamburger icon -->
    <script>
        function toggleSidebar() {
            var width = document.getElementById("mySidenav").style.width;
            var isOpen = width === "250px";

            if (isOpen) {
                document.getElementById("mySidenav").style.width = "0";
            } else {
                document.getElementById("mySidenav").style.width = "250px";
            }

            $('.animated-icon').toggleClass('open', !isOpen);
        }
    </script>

</body>
</html>